<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <p>
    <%= check_box_tag "task_#{task.id}", '1', task.completed %>
    <%= task.title %>
  </p>
<% end %>
<!-- app/views/tasks/index.html.erb -->
<h1>Tasks</h1>

<%= link_to 'New Task', new_task_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.details %></td>
        <td><%= task.completed ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to 'Show', task_path(task) %> |
          <%= link_to 'Edit', edit_task_path(task) %> |
          <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
